    <!-- Categories Start -->
    <div class="container-fluid pt-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">{{section.settings.Banner_title}}</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
            {% for collection in collections %}
            <div class="col-lg-4 col-md-6 pb-1">
                {%- if collection.image -%}
                    {%- assign collection_image = collection.image -%}
                {%- elsif collection.products.first and collection.products.first.images != empty -%}
                    {%- assign collection_image = collection.products.first.featured_image -%}
                {%- else -%}
                    {%- assign collection_image = blank -%}
                {%- endif -%}
                <div class="cat-item d-flex flex-column border mb-4" style="padding: 30px;">
                    <p class="text-right">{{ collection.all_products_count }}</p>
                   
                    <a href="{{ collection.url }}" class="cat-img position-relative overflow-hidden mb-3">
                        <img class="img-fluid" src=" {{ collection_image | img_url: '480x' }}" alt="">
                    </a>
                   
                    <h5 class="font-weight-semi-bold m-0">{{ collection.title }}</h5>
                </div>
            </div>
           {%endfor%}
        </div>
    </div>
    <!-- Categories End -->
    {% schema %}
    {
        "name":"Category Title",
        "settings":[
        {
            "type": "text",
            "id":"Banner_title",
             "label":"Banner Title"
        }]
    }
    {% endschema %}